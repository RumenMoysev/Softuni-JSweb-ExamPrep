<section id="registerPage">
    <form id='registerForm' method="POST">
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" placeholder="Email" value="{{userData.email}}">

        <label for="username">Username:</label>
        <input type="text" id="username" name="username" placeholder="Enter your Username" value="{{userData.username}}">

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" placeholder="Password" value="{{userData.password}}">

        <label for="rePassword">Repeat Password:</label>
        <input type="password" id="rePassword" name="rePassword" placeholder="Repeat Password" value="{{repeatPassword}}">

        <input type="submit" class="register" value="Register">
    </form>
</section>