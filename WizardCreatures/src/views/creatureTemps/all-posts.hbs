<main>

    <section id="catalog">
        <h1>All posts</h1>
        <div class="band">

            <!-- If there are posts for creature in the database display each of them -->
            {{#each creatures}}
            <div class="flip flip-vertical">
                <div class="front">
                    <img src="{{this.image}}" alt="Thestral">
                </div>
                <div class="back">
                    <h1>{{this.name}}</h1>
                    <h2>Species: {{this.species}}</h2>
                    <p>Description: {{this.description}}</p>
                    <a href="/creatures/{{this._id}}/details" class="details">Details</a>
                </div>
            </div>
            {{else}}
            <div class="no-posts">
                <p class="no-offer">There are no posts yet...</p>
            </div>
            {{/each}}
        </div>
    </section>
</main>