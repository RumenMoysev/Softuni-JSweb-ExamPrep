<main>
    <section id="details-page">
        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Name: {{creatureData.name}}</h1>
                    <h3>Created by an author: {{creatureData.owner.firstName}} {{creatureData.owner.lastName}}</h3>
                    <div class="card_character">
                        <p class="card-species">Species: {{creatureData.species}}</p>
                        <p class="card-skin">Skin colour: {{creatureData.skinColor}}</p>
                        <p class="card-eye">Eye Colour: {{creatureData.eyeColor}}</p>
                    </div>

                    <p class="disc">
                        Description: {{creatureData.description}}
                    </p>

                    {{#if isAuthenticated}}
                    <div class="social-btn">

                        {{#if isOwner}}
                        <a href="/creatures/{{creatureData._id}}/edit" class="edit-btn">Edit</a>
                        <a href="/creatures/{{creatureData._id}}/delete" class="del-btn">Delete</a>
                        {{else}}

                        {{#if hasUserVoted}}
                        <p class="thanks-for-vote">Thanks For Voting</p>
                        {{else}}
                        <a href="/creatures/{{creatureData._id}}/vote" class="vote-up">Vote</a>
                        {{/if}}
                        {{/if}}
                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="card_right">
                <img src="{{creatureData.image}}" alt="{{creatureData.name}}" />
            </div>
        </div>
    </section>

    <section id="votes">
        <div class="vote-info">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                        <p class="PV">Total rating of votes: {{votes}}</p>
                    </div>
                    <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                    
                    {{#if votes}}
                    <p class="disc">People who voted for the post - {{votedEmails}}</p>

                    {{else}}
                    <p class="disc">
                        People who voted for the post - No one has voted yet.
                    </p>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>
</main>