<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" action="search" method="GET">
            <input type="text" class="search-game" name="search" placeholder="Search here..." value="{{query.search}}"/>
            <select id="platform" name="platform">
                <option value="">-------</option>
                {{#each options}}
                <option value="{{this.value}}" {{#if this.selected}} selected="true" {{/if}}>{{this.value}}</option>
                {{/each}}
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        {{#if games}}
        <div class="search-result">
            <div class="search-list">
                {{#each games}}
                <div class="game">
                    <div class="game-img">
                        <img src="{{this.image}}" />
                    </div>
                    <div class="game-info">
                        <h1>The Witcher 3</h1>
                        <p><span>Platform: </span>{{this.platform}}</p>
                        <p><span>Ganre: </span>{{this.genre}}</p>
                        <p><span>Price: </span>${{this.price}}</p>
                    </div>

                    <a href="/games/{{this._id}}/details" class="btn-details">Details</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{else}}
        <div class="no-match">
            <p>No match was found!</p>
        </div>
        {{/if}}
    </section>
</main>