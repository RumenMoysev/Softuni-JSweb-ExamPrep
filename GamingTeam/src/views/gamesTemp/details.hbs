<main id="details">
    <section id="details-info">
        <div class="game-image">
            <img src="{{gameData.image}}" />
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{gameData.name}}</h1>
                <h3 id="platform">Platform: {{gameData.platform}}</h3>
                <p id="price"><span>Price: ${{gameData.price}}</span></p>
                <p id="genre"><span>Genre: {{gameData.genre}}</span></p>
                <p id="description">{{gameData.description}}</p>
            </div>
            <div class="product-btn">
                {{#if isAuthenticated}}
                {{#if isOwner}}
                <div class="author">
                    <a href="/games/{{gameData._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/games/{{gameData._id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{else}}
                {{#if isBought}}
                <p class="buy-message">You have already bought this game</p>
                {{else}}
                <a href="/games/{{gameData._id}}/buy" class="btn-buy">Buy</a>
                {{/if}}
                {{/if}}
                {{/if}}
            </div>
        </div>
    </section>
</main>
