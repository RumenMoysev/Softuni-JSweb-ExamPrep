<main>
    <div class="container">
        <div class="col-9">
            <div class="card">
                <div class="top">
                    <div class="userDetails">

                        <!-- Link to User Profile Details Page-->
                        <div>
                            <div class="profilepic">
                                <div class="profile_img">
                                    <div class="image">
                                        <img src="/images/person.png" alt="img8">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h3>

                            <!-- Link to User Profile Details Page -->
                            <p>
                                <!-- User's username -->
                                {{petData.owner.username}}
                            </p>
                            <!-- photo's location -->
                            <span>{{petData.location}}</span>

                            <!-- IF the viewer is the creator of the photo -->
                            {{#if isOwner}}
                            <div class="edit-delete-btns">

                                <!-- Edit Pet Photo -->

                                <a href="/pets/{{petData._id}}/edit">
                                    <img class="edit-img" src="/images/edit-pen-icon-6.jpg" alt="edit button">
                                </a>

                                <!--Delete Pet Photo -->
                                <a href="/pets/{{petData._id}}/delete">
                                    <img class="bin-img" src="/images/icon-remove-22.jpg" alt="bin button">
                                </a>
                            </div>
                            {{/if}}
                        </h3>
                    </div>

                </div>

                <div class="imgBx">
                    <!-- Pet Photo -->
                    <img src="{{petData.image}}" alt="post" class="cover">
                </div>

                <div class="bottom">
                    <p class="message">
                        <b class="petDescription">{{petData.description}}</b>
                    </p>

                    <div class="pet-details">
                        <p class="petName">Name: {{petData.name}}</p>
                        <p class="petAge">Age: {{petData.age}}</p>
                    </div>

                    {{#if petData.commentList}}
                    <div class="comments">
                        <div class="comments-top">
                            {{#each petData.commentList}}
                            <div class="userDetails">
                                <div class="comment-data">
                                    <div class="profilepic">
                                        <div class="profile_img">
                                            <div class="image">
                                                <!-- User Profile Image -->
                                                <img src="/images/person.png" alt="img8">
                                            </div>
                                        </div>
                                    </div>

                                    <!--User's username-->
                                    <p><b>{{this.user.username}} </b>{{this.comment}}</p>
                                </div>
                            </div>
                            {{/each}}
                        </div>

                    </div>
                    {{/if}}
                </div>
                {{#if isAuthenticated}}
                {{#if notOwner}}
                <div class="addComments">
                    <!-- Start Add Comments Form -->
                    <form method="POST">
                        <textarea id="comment-textarea" name="comment" cols="40" rows="10"
                            placeholder="Add comment..."></textarea>
                        <!-- Post Comments Button -->
                        <button type="submit">Post</button>
                    </form>
                </div>
                {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</main>