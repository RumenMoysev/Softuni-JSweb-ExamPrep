            {{#each pets}}
            <div class="card">
                <div class="top">
                    <!-- User Details and image location -->
                    <div class="userDetails">
                        <div>
                            <div class="profilepic">
                                <div class="profile_img">
                                    <div class="image">
                                        <img
                                            src="/images/person.png"
                                            alt="img8" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h3>
                            <p>
                                {{this.owner.username}}
                                <br />
                                <!-- photo's location -->
                                <span>{{this.location}}</span>
                            </p>
                        </h3>
                    </div>
                </div>
                <!-- Post image -->
                <div class="imgBx" id="place the id of the photo here">
                    <img
                        src="{{this.image}}"
                        alt="post"
                        class="cover" />
                </div>
                <!-- Name of Pet -->
                <h5 class="petName">Name: {{this.name}}</h5>
                <!-- Age of Pet -->
                <h5 class="petAge">Age: {{this.age}}</h5>
                <!-- Link to Photo Details Page -->
                <a href="/pets/{{this._id}}/details" id="see-details">
                    <h4 class="details">See details</h4>
                </a>
            </div>
            {{else}}
            <!--If there are no photo yet!-->
            <article class="not-available-photo">
                <h1>No photo posts yet.</h1>
            </article>
            {{/each}}
        </div>
    </div>
</main>
