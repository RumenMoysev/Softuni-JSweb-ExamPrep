<main>
    <div class="editPage">
        <h2>Edit photo</h2>
        <form method="post">
            <p>
                <input type="text" name="name" placeholder="Name" value="{{petData.name}}" />
            </p>

            <p>
                <input type="number" name="age" placeholder="Age" value="{{petData.age}}" />
            </p>

            <p>
                <textarea type="text" name="description" placeholder="Description">{{petData.description}}</textarea
                >
            </p>

            <p>
                <input
                    type="text"
                    name="location"
                    placeholder="Location"
                    value="{{petData.location}}" />
            </p>

            <p>
                <input
                    type="text"
                    name="image"
                    placeholder="Link to image"
                    value="{{petData.image}}" />
            </p>
            <button class="edit-btn" type="submit">Edit Photo</button>
        </form>
    </div>
</main>
