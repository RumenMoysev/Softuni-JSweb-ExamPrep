<main class="register">
    <section id="register">
        <div class="form">
            <h2>Register</h2>
            <form class="login-form" method="POST">
                <input type="text" name="email" id="register-email" placeholder="email" value="{{userData.email}}"/>
                <input type="password" name="password" id="register-password" placeholder="password" value="{{userData.password}}"/>
                <input type="password" name="rePassword" id="repeat-password" placeholder="repeat password" value="{{rePassword}}"/>
                <button type="submit">Register</button>
                <p class="message">Already registered? <a href="/users/login">Login</a></p>
            </form>
        </div>
    </section>
</main>