<main class="details">
    <section id="details">
        <div id="details-wrapper">
            <p id="details-title">Name: Show</p>
            <div id="img-wrapper">
                <img src="{{animalDetails.image}}" />
            </div>
            <div id="info-wrapper">
                <table>
                    <tr>
                        <td>
                            <p>
                                Years: <span id="details-years">{{animalDetails.years}}</span>
                            </p>
                        </td>
                        <td>
                            <p>Kind: <span id="details-kind">{{animalDetails.kind}}</span></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Need of: <span id="details-need">{{animalDetails.need}}</span></p>
                        </td>
                        <td>
                            <p>Location: <span id="details-location">{{animalDetails.location}}</span></p>
                        </td>
                    </tr>
                </table>
                <p>Description: <span id="details-description">{{animalDetails.description}}</span></p>
            </div>

            {{#if isAuthenticated}}
            <div id="action-buttons">
                {{#if isOwner}}
                    <a href="/animals/{{animalDetails._id}}/edit" id="edit-btn">Edit</a>
                    <a href="/animals/{{animalDetails._id}}/delete" id="delete-btn">Delete</a>
                {{else}}
                {{#if hasDonated}}
                    <p id="already-donated">You already donated!</p>
                {{else}}
                    <a href="/animals/{{animalDetails._id}}/donate" id="donation-btn">Donation</a>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
</main>